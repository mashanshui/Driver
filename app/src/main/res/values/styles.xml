<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="lineSolid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/bg_gray</item>
    </style>
    <style name="line1">
        <item name="android:background">#ffd5d5d5</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>

    <!-- ==新增运单的一级item textview 样式== -->
    <style name="new_order_root_tv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">#EEEEEE</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- ==新增运单的二级item layout 样式== -->
    <style name="new_order_child_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- ==新增运单的二级item TextView 样式== -->
    <style name="new_order_child_tv_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- ==新增运单的二级item EditText 样式== -->
    <style name="new_order_child_et_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- ==新增运单的二级item 灰色分割线 样式== -->
    <style name="new_order_child_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.4dp</item>
        <item name="android:background">#cecece</item>
    </style>
</resources>
