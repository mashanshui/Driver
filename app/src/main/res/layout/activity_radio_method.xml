<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.channelst.navigationbardemo.RadioMethodActivity">

    <RadioGroup
        android:id="@+id/tab_group"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <!-- home -->
        <RadioButton
            android:id="@+id/tab_home_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:drawablePadding="5dp"
            android:background="?selectableItemBackground"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/tab_home_img_selector"
            android:text="家"
            android:lines="1"
            android:textColor="@color/home_tab_text_color"
            android:textSize="15sp"/>

        <!-- scene -->
        <RadioButton
            android:id="@+id/tab_scene_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:drawablePadding="5dp"
            android:background="?selectableItemBackground"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/tab_scene_img_selector"
            android:text="场景"
            android:lines="1"
            android:textColor="@color/home_tab_text_color"
            android:textSize="15sp"/>

        <!-- find -->
        <RadioButton
            android:id="@+id/tab_find_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:drawablePadding="5dp"
            android:background="?selectableItemBackground"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/tab_found_img_selector"
            android:text="发现"
            android:lines="1"
            android:textColor="@color/home_tab_text_color"
            android:textSize="15sp"/>
        <!-- me -->
        <RadioButton
            android:id="@+id/tab_me_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:drawablePadding="5dp"
            android:background="?selectableItemBackground"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/tab_personal_img_selector"
            android:text="我的"
            android:lines="1"
            android:textColor="@color/home_tab_text_color"
            android:textSize="15sp"/>

    </RadioGroup>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_above="@id/tab_group"/>

    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />


</RelativeLayout>
